# .env.example â€” copy to .env and fill real values
# -------------------------------------------------

# Server
PORT=4000
NODE_ENV=development   # production | development

# Postgres DB (individual parts)
DB_HOST=localhost
DB_PORT=5432
DB_USER=<your_db_user>
DB_PASSWORD=<your_db_password>
DB_NAME=appointment_scheduler

# Optional full connection string (used by some libs)
# Format: postgres://<user>:<password>@<host>:<port>/<dbname>
DATABASE_URL=postgres://<user>:<password>@localhost:5432/appointment_scheduler

# JWT / Auth secrets
JWT_SECRET=<replace_with_long_random_secret_for_access_tokens>
JWT_REFRESH_SECRET=<replace_with_a_different_long_random_secret_for_refresh_tokens>
JWT_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# Redis (for Bull / background jobs)
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_PASSWORD=     # optional, leave blank if not used

# App / infra flags
TRUST_PROXY=false
CORS_ORIGIN=http://localhost:3000

# Security / hashing
BCRYPT_SALT_ROUNDS=10
